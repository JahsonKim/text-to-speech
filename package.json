{
  "name": "text-to-speech",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Gokulakannan T",
    "email": "tgokulakannan951@gmail.com",
    "url": "https://gokulakannant.github.io"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "rescripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder build"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "electron-dev": "^1.0.1",
    "electron-is-dev": "^1.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.1"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "concurrently": "^5.1.0",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "wait-on": "^4.0.0"
  },
  "build": {
    "productName": "Text to Speech",
    "artifactName": "TextToSpeech-${version}-${os}-${arch}.${ext}",
    "appId": "com.experiment.text-to-speech",
    "copyright": "Copyright Â© 2019 ${author}",
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "asar": true,
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "app.utility"
    },
    "mac": {
      "target": "pkg",
      "category": "public.app-category.developer-tools",
      "icon": "public/logo512.png",
      "type": "development"
    },
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "public/logo512.png"
    },
    "nsis": {
      "installerIcon": "public/logo512.png",
      "installerHeaderIcon": "public/logo512.png",
      "deleteAppDataOnUninstall": true
    },
    "pkg": {
      "license": "legal/license.txt",
      "isRelocatable": false
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
